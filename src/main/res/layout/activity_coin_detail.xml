<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CoinDetailActivity">
    
    <ImageView
        android:id="@+id/ivLogoCoin"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background"
        android:contentDescription="Coin logo"/>

    <TextView
        android:id="@+id/tvFromSymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fromSymbol"
        android:textSize = "32sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvSlash"
        app:layout_constraintEnd_toStartOf="@+id/tvSlash"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvSlash" />

    <TextView
        android:id="@+id/tvSlash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" / "
        android:layout_marginTop="16dp"
        android:textSize = "32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivLogoCoin" />

    <TextView
        android:id="@+id/tvToSymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="toSymbol"
        android:textSize = "32sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvSlash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvSlash"
        app:layout_constraintTop_toTopOf="@id/tvSlash" />

<!--Price-->
    <TextView
        android:id="@+id/tvPriceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Цена:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFromSymbol" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginStart="16dp"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/tvPriceLabel"
        app:layout_constraintTop_toTopOf="@+id/tvPriceLabel" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#63000000"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvPriceLabel"/>
    <!--Min-->
    <TextView
        android:id="@+id/tvMinLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Минимум за день"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPriceLabel" />

    <TextView
        android:id="@+id/tvMin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginStart="16dp"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/tvMinLabel"
        app:layout_constraintTop_toTopOf="@+id/tvMinLabel" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#63000000"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvMinLabel"/>
    <!--Max-->
    <TextView
        android:id="@+id/tvMaxLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Максимум за день"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMinLabel" />

    <TextView
        android:id="@+id/tvMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginStart="16dp"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/tvMaxLabel"
        app:layout_constraintTop_toTopOf="@+id/tvMaxLabel" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#63000000"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvMaxLabel"/>
    <!--LastPlace-->
    <TextView
        android:id="@+id/tvLastPlaceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Последняя сделка:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMaxLabel" />

    <TextView
        android:id="@+id/tvLastPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginStart="16dp"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/tvLastPlaceLabel"
        app:layout_constraintTop_toTopOf="@+id/tvLastPlaceLabel" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#63000000"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvLastPlaceLabel"/>
    <!--LastUpdate-->
    <TextView
        android:id="@+id/tvLastUpdateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Обновлено:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLastPlaceLabel" />

    <TextView
        android:id="@+id/tvLastUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginStart="16dp"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/tvLastUpdateLabel"
        app:layout_constraintTop_toTopOf="@+id/tvLastUpdateLabel" />

</androidx.constraintlayout.widget.ConstraintLayout>